{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "src/**/*.ts"
  ]
}
