{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": {
    "unique-mark": "./dist/unique-mark.js"
  },
  "bugs": "https://github.com/Shuunen/shuutils/issues",
  "dependencies": {
    "tiny-glob": "0"
  },
  "description": "utils collection",
  "devDependencies": {
    "@happy-dom/global-registrator": "9",
    "@types/node": "18",
    "@vitest/coverage-v8": "0.32",
    "dependency-cruiser": "13",
    "esbuild": "0.18",
    "eslint": "8.43",
    "eslint-config-hardcore": "39.0",
    "eslint-plugin-jsdoc": "46.4",
    "pkgroll": "1.10",
    "repo-check": "1.32",
    "typescript": "5.1",
    "vitest": "0.32",
    "watchlist": "0"
  },
  "exports": {
    "import": {
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "require": {
      "default": "./dist/index.cjs",
      "types": "./dist/index.d.cts"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/Shuunen/shuutils#readme",
  "keywords": [
    "shuunen",
    "utils",
    "collection",
    "pure",
    "javascript",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "name": "shuutils",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shuunen/shuutils.git"
  },
  "scripts": {
    "build": "rm dist -rf && pkgroll --target=esnext && node bin/banner && pnpm mark && echo build success",
    "build:old": "rm dist -rf && tsc --emitDeclarationOnly && node bin/build && pnpm mark && echo build success",
    "build:watch": "watchlist bin src -eager -- pnpm build",
    "check": "pnpm build && pnpm lint && repo-check && pnpm test && echo check success",
    "dev": "pnpm test:watch",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .js,.ts . && depcruise src --config && echo lint success",
    "lint:watch": "watchlist src tests -eager -- pnpm lint",
    "mark": "node dist/unique-mark.js dist/**/* && echo mark success",
    "postversion": "git push && git push --tags && npm publish",
    "prepack": "pnpm build",
    "preversion": "pnpm check",
    "start": "pnpm dev",
    "test": "pnpm test:watch --run && echo test success",
    "test:bench": "vitest bench",
    "test:update": "vitest --run --update && echo test update success",
    "test:watch": "vitest --coverage"
  },
  "type": "module",
  "types": "./dist/index.d.cts",
  "version": "7.3.1"
}
